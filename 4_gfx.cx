func invalid_effect() (out effect_handle_s) {
    out.effect = -1
    out.program = -1
}

//-----------------------------------------------------------------------------
//-----------------------------------------------------------------------------
func is_valid_effect(handle effect_handle_s) (out bool) {
    out = handle.effect >= 0 && handle.effect < g_effectCount // && is_valid_program(handle.program) ##2 program handle ??
}

//-----------------------------------------------------------------------------
//-----------------------------------------------------------------------------
func create_effect(vertex str, pixel str) (out effect_handle_s) {
    out.effect = g_effectCount
    out.program = create_program(vertex, pixel)

    var effect effect_s
    effect.handle = out
    effect.vertex = vertex
    effect.pixel = pixel
    effect.attributeCount = 0
    effect.samplerCount = 0
    effect.uniformCount = 0
    g_effects[out.effect] = effect
    g_effectCount = out.effect + 1
    uti.assert_(is_valid_effect(out), "create_effect : invalid effect handle")
}

//-----------------------------------------------------------------------------
//-----------------------------------------------------------------------------
func effect_is_valid_sampler_slot(handle effect_handle_s, slot i32) (out bool) {
    uti.assert_(is_valid_effect(handle), "effect_is_valid_sampler_slot : invalid effect handle")
    var samplerCount i32 = g_effects[handle.effect].samplerCount
    out = slot >= 0 && slot < samplerCount
    //out = slot >= 0 && slot < g_effects[handle.effect].samplerCount // ##pending
}

//-----------------------------------------------------------------------------
//-----------------------------------------------------------------------------
func effect_is_valid_uniform_slot(handle effect_handle_s, slot i32) (out bool) {
    uti.assert_(is_valid_effect(handle), "effect_is_valid_uniform : invalid effect handle")
    var uniformCount i32 = g_effects[handle.effect].uniformCount
    out = slot >= 0 && slot < uniformCount
    //out = slot >= 0 && slot < g_effects[handle.effect].uniformCount // ##pending
}

//-----------------------------------------------------------------------------
//-----------------------------------------------------------------------------
func effect_use(handle effect_handle_s) () {
    uti.assert_(is_valid_effect(handle), "effect_use : invalid handle")
    use_program(handle.program)
}

//-----------------------------------------------------------------------------
//-----------------------------------------------------------------------------
func effect_assign_texture(handle effect_handle_s, slot i32, texture i32) () {
    uti.assert_(is_valid_effect(handle), "effect_assign_texture : invalid handle")
    uti.assert_(effect_is_valid_sampler_slot(handle, slot), "effect_assign_texture : invalid sampler slot")
    assign_texture(slot, g_effects[handle.effect].samplers[slot].location, texture)
}

//-----------------------------------------------------------------------------
//-----------------------------------------------------------------------------
func effect_assign_float(handle effect_handle_s, slot i32, value f32) {
    uti.assert_(is_valid_effect(handle), "effect_assign_float : invalid handle")
    uti.assert_(effect_is_valid_uniform_slot(handle, slot), "effect_assign_float : invalid uniform slot")
    assign_float(g_effects[handle.effect].uniforms[slot].location, value)
}

//-----------------------------------------------------------------------------
//-----------------------------------------------------------------------------
func effect_bind_attribute(handle effect_handle_s, location i32, name str) {
    uti.assert_(is_valid_effect(handle), "effect_bind_attribute : invalid handle")
    bind_attribute(handle.program, location, name)
    var attributeCount i32 = g_effects[handle.effect].attributeCount
    g_effects[handle.effect].attributes[attributeCount] = attribute_(location, name)
    g_effects[handle.effect].attributeCount = attributeCount + 1
}

//-----------------------------------------------------------------------------
//-----------------------------------------------------------------------------
func effect_bind_sampler(handle effect_handle_s, name str) {
    uti.assert_(is_valid_effect(handle), "effect_bind_sampler : invalid handle")
    var location i32 = bind_texture(handle.program, name)
    var samplerCount i32 = g_effects[handle.effect].samplerCount
    g_effects[handle.effect].samplers[samplerCount] = sampler_(location, name)
    g_effects[handle.effect].samplerCount = samplerCount + 1
}

//-----------------------------------------------------------------------------
//-----------------------------------------------------------------------------
func effect_bind_uniform(handle effect_handle_s, name str) {
    uti.assert_(is_valid_effect(handle), "effect_bind_uniform : invalid_handle")
    var location i32 = bind_uniform(handle.program, name)
    var uniformCount i32 = g_effects[handle.effect].uniformCount
    g_effects[handle.effect].uniforms[uniformCount] = uniform_(location, name)
    g_effects[handle.effect].uniformCount = uniformCount + 1
}

